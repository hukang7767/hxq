<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@mipmap/backgroud_p">
        <TextView
            android:id="@+id/tv_qh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:padding="5dp"
            android:background="@drawable/qh_bg"
            android:text="一键切换"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:text="15:30"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textColor="#ffffff"
            android:text="预约定时剩余时间"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll1"
        android:layout_marginTop="70dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_tem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="34℃"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#ffffff"
            android:text="500人"/>
        <TextView
            android:id="@+id/error"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#ffffff"
            android:text="正常"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll2"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#ffffff"
            android:text="温度"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#ffffff"
            android:text="用户人数"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#ffffff"
            android:text="运行状态"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_light"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:drawableTop="@mipmap/loght_on"
            android:gravity="center"
            android:textColor="#ffffff"
            android:background="@drawable/sha_text_bg"
            android:drawablePadding="20dp"
            android:text="趣味灯1"/>
        <LinearLayout
            android:id="@+id/ll_fs"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/sha_text_bg"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/img_f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/fengshan"/>
            <TextView
                android:id="@+id/tv_fs"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="#ffffff"
                android:text="风速"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_yy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/dingshi"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:background="@drawable/sha_text_bg"
            android:gravity="center"
            android:textColor="#ffffff"
            android:drawablePadding="20dp"
            android:text="预约定时"/>
    </LinearLayout>
</RelativeLayout>